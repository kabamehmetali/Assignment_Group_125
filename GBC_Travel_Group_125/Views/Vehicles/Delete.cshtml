@model GBC_Travel_Group_125.Models.Vehicles

@{
    ViewData["Title"] = "Delete Vehicle";
}

<div class="container mt-4">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <div class="row justify-content-center mt-3">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header border-danger">
                    <strong class="text-danger">Confirm Delete</strong>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><strong>@Model.VehicleName</strong></h5>
                    <p class="card-text"><strong>ID:</strong> @Model.VehicleId</p>
                    <p class="card-text"><strong>Type:</strong> @Model.VehicleType</p>
                    <p class="card-text"><strong>Model:</strong> @Model.Model</p>
                    <p class="card-text"><strong>Color:</strong> @Model.Color</p>
                    <p class="card-text"><strong>Location:</strong> @Model.Location</p>
                    <p class="card-text"><strong>Max Capacity:</strong> @Model.MaxCapacity Seats</p>
                    <p class="card-text"><strong>Price:</strong> $@Model.Price</p>
                    <p class="card-text"><strong>Description:</strong> @Model.VehicleDescription</p>
                    <div class="alert alert-warning border-danger" role="alert">
                        Are you sure you want to delete this vehicle? This action cannot be undone.
                    </div>
                </div>
                <div class="card-footer border-danger">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="VehicleId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
