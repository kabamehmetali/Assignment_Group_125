@model GBC_Travel_Group_125.Models.Stays

@{
    ViewData["Title"] = "Create New Stay";
}

<br />
<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container mt-4">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="form-group">
            <label asp-for="HotelImage" class="control-label">Hotel Image</label>
            <div class="mt-2">
                <input type="file" asp-for="HotelImage" class="form-control" />
                <span asp-validation-for="HotelImage" class="text-danger"></span>
            </div>
        </div>

        <!-- Editable Fields -->
        <div class="form-group">
            <label asp-for="HotelName" class="control-label"></label>
            <input asp-for="HotelName" class="form-control" />
            <span asp-validation-for="HotelName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MaximumRoom" class="control-label"></label>
            <input asp-for="MaximumRoom" class="form-control" type="number" />
            <span asp-validation-for="MaximumRoom" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HotelLocation" class="control-label"></label>
            <input asp-for="HotelLocation" class="form-control" />
            <span asp-validation-for="HotelLocation" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <!-- Additional fields specific to Stays, similar to Vehicle fields, can be added here -->

        <br />
        <!-- Action Buttons -->
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
<br />
<br />
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
