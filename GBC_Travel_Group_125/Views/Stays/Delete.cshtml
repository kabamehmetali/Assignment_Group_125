@model GBC_Travel_Group_125.Models.Stays

@{
    ViewData["Title"] = "Delete Stay";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>
    <div class="card">
        <div class="card-header bg-danger text-white">
            Confirm Deletion
        </div>
        <div class="card-body">
            <h5 class="card-title">Are you sure you want to delete this stay?</h5>
            <h6 class="card-subtitle mb-2 text-muted">Stay Details</h6>
            <dl class="row">
                <dt class="col-sm-4">Hotel Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.HotelName)</dd>

                <dt class="col-sm-4">Location</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.HotelLocation)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="StayId" />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</div>
