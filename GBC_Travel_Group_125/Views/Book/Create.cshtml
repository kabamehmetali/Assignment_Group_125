@model GBC_Travel_Group_125.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h2>@ViewData["Title"]</h2>

<h4>Book a Vehicle</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="VehicleId" /> <!-- Assuming vehicleId is passed to this view -->

            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" class="form-control" type="date" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BookingType" class="control-label"></label>
                <select asp-for="BookingType" class="form-control">
                    <!-- Assuming BookingType is an enum or similar; adjust values as necessary -->
                    <option value="0">Type 1</option>
                    <option value="1">Type 2</option>
                    <!-- Add more options here -->
                </select>
                <span asp-validation-for="BookingType" class="text-danger"></span>
            </div>

            <!-- Add UserId if applicable, possibly as a hidden field if user is logged in -->

            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
