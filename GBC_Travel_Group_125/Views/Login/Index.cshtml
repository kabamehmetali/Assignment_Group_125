@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row mt-4 mb-4">
       <div class="col-md-4 col-lg-4 col-sm-2"></div>
       <div class="col-sm-8 col-md-4 col-lg-4 ">
        <div class="card">
        
            <img class="card-img-top" height="300" width="300" src="~/images/login.jpg" alt="Airplane"/>
      
        <div class="card-body">
        <form class="text-start p-4  justify-content-center">
            <div class="form-group">
                <label class="form-label" itemid="email">E-mail:</label>
                <input class="form-control" type="text" name="email" value="" itemid="email" placeholder="Enter Your E-mail" />
            </div>
            <div class="form-group mt-2">
                <label class="form-label" itemid="password">Password:</label>
                <input class="form-control" type="password" name="password" value="" itemid="password" placeholder="Enter Your Password" />
            </div>
            <br />
            <input class="btn btn-success btn-lg" type="submit" value=" Login "/>
            <a class="btn btn-outline-primary btn-lg"  asp-controller="Login" asp-action="Register" width="200">Register</a>
        </form>
        </div>
                <div class="col-md-4 col-lg-4 col-sm-2"></div>
       </div>
      </div>
    </div>
    <br />
</div>