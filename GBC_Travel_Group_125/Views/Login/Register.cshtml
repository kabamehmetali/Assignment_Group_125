@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row mt-4 mb-4">
        <div class="col-md-4 col-lg-4 col-sm-2"></div>
        <div class="col-sm-8 col-md-4 col-lg-4 ">
            <div class="card">

                <img class="card-img-top" height="300" width="300" src="~/images/login.jpg" alt="Airplane" />

                <div class="card-body">
                    <form class="text-start p-4  justify-content-center">
                        <div class="form-group">
                            <label class="form-label" itemid="name">Name:</label>
                            <input class="form-control" type="text" name="name" value="" itemid="name" placeholder="Enter Your Name" />
                        </div>
                        <div class="form-group">
                            <label class="form-label" itemid="LastName">Last Name:</label>
                            <input class="form-control" type="text" name="LastName" value="" itemid="LastName" placeholder="Enter Your Last Name" />
                        </div>
              
                        <div class="form-group mt-2">
                            <label class="form-label" itemid="email">Email:</label>
                            <input class="form-control" type="email" name="password" value="" itemid="email" placeholder="Enter an E-mail" />
                        </div>
                        <div class="form-group mt-2">
                            <label class="form-label" itemid="password">Password:</label>
                            <input class="form-control" type="password" name="password" value="" itemid="password" placeholder="Enter a Password" />
                        </div>
                        <div class="form-group">
                            <label class="form-label" itemid="DateofBirth">Date of Birth:</label>
                            <input class="form-control" type="Date" name="DateofBirth"  itemid="DateofBirth"  />
                        </div>
                        <br />
                        <input class="btn btn-success btn-lg" type="submit" value=" Register " />
                        <a class="btn btn-outline-primary btn-lg" asp-controller="Login" asp-action="Index" width="200">Go Back</a>
                    </form>
                </div>
                <div class="col-md-4 col-lg-4 col-sm-2"></div>
            </div>
        </div>
    </div>
    <br />
</div>